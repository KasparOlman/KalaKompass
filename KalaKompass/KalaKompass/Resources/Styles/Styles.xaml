<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--_________________________Button Styles_________________________-->

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="HeightRequest" Value="52"/>
        <Setter Property="FontFamily" Value="MediumFont"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}"/>
        <Setter Property="CornerRadius" Value="26"/>
        <Setter Property="Padding" Value="64, 0"/>
    </Style>

    <!--<Style TargetType="Label" x:Key="DetailButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HeightRequest" Value="20"/>
        <Setter Property="TextColor" Value="#CCCCCC"/>
        <Setter Property="Padding" Value="20, 0"/>
    </Style>-->

     <!--_________________________Label Styles_________________________-->
    <Style TargetType="Label" x:Key="BaseBoldLabelStyle">
        <Setter Property="FontFamily" Value="BoldFont"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="FontAutoScalingEnabled" Value="False"/>
    </Style>

    <Style TargetType="Label" x:Key="BaseRegularLabelStyle">
        <Setter Property="FontFamily" Value="RegularFont"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="FontAutoScalingEnabled" Value="False"/>
    </Style>

    <Style TargetType="Label" x:Key="BaseMediumLabelStyle">
        <Setter Property="FontFamily" Value="MediumFont"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="FontAutoScalingEnabled" Value="False"/>
    </Style>

    <Style TargetType="Label" x:Key="IntroPageHeaderStyle" BasedOn="{StaticResource BaseBoldLabelStyle}">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextColor" Value="{StaticResource DarkTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="IntroPageTextStyle" BasedOn="{StaticResource BaseRegularLabelStyle}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="LineHeight" Value="1.15"/>
        <Setter Property="TextColor" Value="{StaticResource DarkTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="PageHeaderStyle" BasedOn="{StaticResource BaseBoldLabelStyle}">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>

    <Style TargetType="Label" x:Key="PageHeaderSubtitleStyle" BasedOn="{StaticResource BaseMediumLabelStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="MenuLabelStyle" BasedOn="{StaticResource BaseRegularLabelStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="#CCCCCC"/>
    </Style>

    <Style TargetType="Label" x:Key="PageSubHeaderStyle" BasedOn="{StaticResource BaseMediumLabelStyle}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="FeaturedFishHeaderStyle" BasedOn="{StaticResource BaseMediumLabelStyle}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="FeaturedFishHeaderSubtitleStyle" BasedOn="{StaticResource BaseMediumLabelStyle}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="AllFishHeaderSubtitleStyle" BasedOn="{StaticResource BaseRegularLabelStyle}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="FishHeaderSubtitleStyle" BasedOn="{StaticResource BaseRegularLabelStyle}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

    <Style TargetType="Label" x:Key="FishDetailsTextStyle" BasedOn="{StaticResource BaseRegularLabelStyle}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}"/>
    </Style>

</ResourceDictionary>
